<UserControl x:Class="IPCalculatorWPF.View.IpAddressInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <Label Content="{Binding Header}" VerticalAlignment="Center" FontWeight="Bold" MinWidth="60"/>
        <TextBox x:Name="FirstOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center"/>
        <Label Content="." VerticalAlignment="Center"/>
        <TextBox x:Name="SecondOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center"/>
        <Label Content="." VerticalAlignment="Center"/>
        <TextBox x:Name="ThirdOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center"/>
        <Label Content="." VerticalAlignment="Center"/>
        <TextBox x:Name="FourthOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center"/>
    </StackPanel>
</UserControl>