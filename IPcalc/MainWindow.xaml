<Window x:Class="IPCalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:IPCalculatorWPF.View"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="IP Calculator" Height="330" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <view:IpAddressInput x:Name="IpAddressControl" 
                           Header="IP-Адрес"
                           OctetChanged="IpAddress_OctetChanged"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">

            <view:IpAddressInput x:Name="SubnetMaskControl" 
                               Header="Маска"
                               OctetChanged="SubnetMask_OctetChanged"/>

            <Label Width="20"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="Префикс:" 
                       VerticalAlignment="Center" 
                       FontWeight="Bold"
                       Margin="0,0,5,0"/>
                <xctk:IntegerUpDown x:Name="PrefixBox" 
                                  Minimum="0" 
                                  Maximum="32" 
                                  Width="50" 
                                  FontSize="12" 
                                  TextAlignment="Center" 
                                  VerticalAlignment="Center"
                                  ValueChanged="PrefixBox_ValueChanged"/>
            </StackPanel>
        </StackPanel>

        <TextBox Grid.Row="2" 
                 x:Name="InfoTextBlock" 
                 Margin="0,20,0,0" 
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" 
                 VerticalContentAlignment="Top" 
                 IsReadOnly="True"/>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="80" Click="OnCancelClicked"/>
        </StackPanel>
    </Grid>
</Window>