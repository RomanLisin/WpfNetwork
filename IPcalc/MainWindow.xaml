<Window x:Class="IPCalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="IP Calculator" Height="330" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="IP-Адрес" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="FirstOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center" TextChanged="Octet_TextChanged"/>
            <Label Content="." VerticalAlignment="Center"/>
            <TextBox x:Name="SecondOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center" TextChanged="Octet_TextChanged"/>
            <Label Content="." VerticalAlignment="Center"/>
            <TextBox x:Name="ThirdOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center" TextChanged="Octet_TextChanged"/>
            <Label Content="." VerticalAlignment="Center"/>
            <TextBox x:Name="FourthOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center" TextChanged="Octet_TextChanged"/>
            <Label Width="50"/>
            <Label Width="90"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Label Content="Macka" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="MaskFirstOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center" TextChanged="MaskOctet_TextChanged"/>
            <Label Content="." VerticalAlignment="Center"/>
            <TextBox x:Name="MaskSecondOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center" TextChanged="MaskOctet_TextChanged"/>
            <Label Content="." VerticalAlignment="Center"/>
            <TextBox x:Name="MaskThirdOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center" TextChanged="MaskOctet_TextChanged"/>
            <Label Content="." VerticalAlignment="Center"/>
            <TextBox x:Name="MaskFourthOctet" Width="40" MaxLength="3" FontSize="12" VerticalContentAlignment="Center" TextAlignment="Center" TextChanged="MaskOctet_TextChanged"/>
            <Label Width="30" VerticalAlignment="Center"/>
            <Label Content="Prefix:" VerticalAlignment="Center" FontWeight="Bold"/>
            <xctk:IntegerUpDown x:Name="PrefixBox" Minimum="0" Maximum="32" Width="50" FontSize="12" TextAlignment="Center" ValueChanged="PrefixBox_ValueChanged"/>
        </StackPanel>

        <TextBox Grid.Row="3" x:Name="InfoTextBlock" Margin="0,20,0,0" Height="150" FontSize="12" TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto"  IsReadOnly="True"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="OnCancelClicked"/>
        </StackPanel>
    </Grid>
</Window>